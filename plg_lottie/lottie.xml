<?xml version="1.0" encoding="utf-8"?>
<extension version="3.8" type="plugin" method="upgrade" group="content">
	<name>PLG_CONTENT_LOTTIE</name>
	<author>Elisa Foltyn</author>
	<creationDate>26.10.2020</creationDate>
	<copyright>(C) Elisa Foltyn COOLCAT creations. All rights reserved.</copyright>
	<license>GNU General Public License version 3 or later</license>
	<authorEmail>contact@coolcat-creations.com</authorEmail>
	<authorUrl>coolcat-creations.com</authorUrl>
	<version>1.0.1</version>
	<description>PLG_CONTENT_LOTTIE_XML_DESCRIPTION</description>

	<files>
		<filename plugin="lottie">lottie.php</filename>
		<filename>index.html</filename>
		<folder>tmpl</folder>
	</files>

	<media destination="plg_content_lottie" folder="media">
		<folder>js</folder>
	</media>

	<languages folder="language">
		<language tag="en-GB">en-GB/en-GB.plg_content_lottie.ini</language>
		<language tag="en-GB">en-GB/en-GB.plg_content_lottie.sys.ini</language>
		<language tag="de-DE">de-DE/de-DE.plg_content_lottie.ini</language>
		<language tag="de-DE">de-DE/de-DE.plg_content_lottie.sys.ini</language>
	</languages>

	<updateservers>
		<server type="extension" priority="1" name="Lottie Update Server">https://raw.githubusercontent.com/coolcat-creations/lottie/master/update.xml</server>
	</updateservers>
</extension>
